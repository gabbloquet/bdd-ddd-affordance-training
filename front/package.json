    "jest": "29.1.2",
    "jest-environment-jsdom": "29.1.2",
    "jest-sonar-reporter": "2.0.0",
    "nock": "13.2.9",
    "prettier": "2.7.1",
    "react-test-renderer": "18.2.0",
    "ts-jest": "^29.0.3",
